<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@android:color/transparent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingRight="15dp"
        android:paddingTop="10dp" >

		<ImageView 
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/music_list_image"
        />
        <ImageButton
            android:id="@+id/music_list_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:src="@drawable/playlist_play" />

        <TextView
            android:id="@+id/music_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:lines="1"
            android:paddingLeft="50dp"
            android:layout_toLeftOf="@id/music_list_play"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/music_item_artist_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/music_item_name"
            android:paddingLeft="50dp"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/white"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/music_item_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:visibility="gone" />

</LinearLayout>