<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/channel_item_height"
        android:background="@drawable/transparent_line_bg"
        android:orientation="horizontal" >

        <!-- 第一部分，台标和频道名 -->

        <LinearLayout
            android:layout_width="@dimen/channel_item_logowidth"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <ImageView
                android:id="@+id/channel_logo"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_gravity="center|center_vertical"
                android:focusable="false"
                android:scaleType="centerInside"
                android:src="@drawable/logotv" />

            <TextView
                android:id="@+id/channel_name"
                android:layout_width="match_parent"
                android:layout_height="20dip"
                android:layout_marginTop="@dimen/channel_item_name_margintop"
                android:focusable="false"
                android:singleLine="true"
                android:gravity="center|center_vertical"
                android:text="CCTV"
                android:textColor="@android:color/white"
                android:textSize="@dimen/channel_item_textsize" />
        </LinearLayout>

        <!-- 第二部分，台标和频道名 -->

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/channel_play_info"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:focusable="false"
                android:gravity="left|center_vertical"
                android:text="无节目信息"
                android:textColor="@android:color/white"
                android:textSize="@dimen/channel_item_textsize" />

            <TextView
                android:id="@+id/program_yuyue"
                android:layout_width="32dp"
                android:layout_height="40dip"
                android:layout_gravity="center_vertical"
                android:focusable="false"
                android:gravity="left|center_vertical"
                android:text="取消\n预约"
                android:textColor="@color/white"
                android:textSize="@dimen/channel_item_textsize" />

            <TextView
                android:id="@+id/channel_play_button"
                android:layout_width="32dp"
                android:layout_height="40dip"
                android:layout_gravity="center_vertical"
                android:focusable="false"
                android:gravity="left|center_vertical"
                android:text="节目\n信息"
                android:textColor="@android:color/white"
                android:textSize="@dimen/channel_item_textsize" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>