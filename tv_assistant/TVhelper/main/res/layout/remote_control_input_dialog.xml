<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"    
    android:layout_height="150dip"
    android:background="@drawable/tv_ime_bg">
      
    <LinearLayout         
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="left"
        android:layout_marginLeft="5dp" 
        android:paddingTop="20dp"               
        android:layout_weight="8"
        android:orientation="vertical"
        android:gravity="center">
        
        <EditText
            android:id="@+id/textbox"
            android:background="@drawable/bg_edittext"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:padding="5dp"
            android:width="130dp"
            android:height="90dp"
            android:maxLines="4"
            android:singleLine="false"                   
            android:gravity="top|left"/>
            
        <LinearLayout         
	        android:layout_width="match_parent"
	        android:layout_height="70dip"
	        android:layout_gravity="bottom"
	        android:gravity="center"
	        android:orientation="horizontal">
	        
	        <Button
	            android:id="@+id/delete"
	            android:layout_width="85.5dip"
	            android:layout_height="26dip"
	            android:layout_gravity="center_horizontal|center_vertical"
	            android:layout_marginLeft="5dp"
		        android:layout_marginRight="5dp"
	            android:background="@drawable/tv_remote_dialog_delete"
                android:visibility="gone" />

            <Button
                    android:id="@+id/yuyin"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/remote_yuyin"
                    android:visibility="gone"/>
	        
	        <Button
		            android:id="@+id/clear"
		            android:layout_width="85.5dip"
		            android:layout_height="26dip"
		            android:layout_gravity="center_horizontal|center_vertical"
		            android:layout_marginLeft="5dp"
		            android:layout_marginRight="5dp"
		            android:background="@drawable/sendinput"
                    android:visibility="gone"/>
	        <Button
                    android:id="@+id/cancel"
                    android:layout_height="@dimen/dialog_btn_height"
                    android:layout_width="@dimen/dialog_btn_width"
                    android:background="@drawable/btn_notext"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="取    消"
                    android:textSize="@dimen/dialog_btn_textsize"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:gravity="center"/>
	        <Button
		            android:id="@+id/send"
		            android:text="发    送"
		            android:background="@drawable/btn_notext"
                    android:textSize="@dimen/dialog_btn_textsize"
                    android:textColor="@color/white"
		           android:layout_height="@dimen/dialog_btn_height"
                    android:layout_width="@dimen/dialog_btn_width"
		            android:layout_gravity="center_horizontal|center_vertical"
		            android:layout_marginLeft="@dimen/dialog_btn_marginLeft"
		            android:layout_marginRight="30dp"
		            android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_weight="1"/>

            
        </LinearLayout>
    </LinearLayout>
    
