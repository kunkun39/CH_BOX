<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_bk"
    tools:context=".TVRemoteControlActivity" >
    <!--IP选择-->
    <LinearLayout
        android:id="@+id/banner"
        android:background="@drawable/title_banner"
        android:layout_height="67.6dip"
        android:layout_width="fill_parent"
        android:focusable="false"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/title"
            android:text="未连接"
            android:textSize="20sp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_width="80dip"
            android:layout_height="64.3dip"
            />

        <ImageView
            android:layout_gravity="center_vertical"
            android:background="@drawable/title_ip_select"
            android:layout_width="16.7dip"
            android:layout_height="10.7dip"
            />
    </LinearLayout>
    <!--内容-->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/banner">
        
	    <ImageView
	        android:id="@+id/img"
	        android:src="@drawable/nofocus"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        />
	    <!-- android:layout_width="226dip"
	        android:layout_height="234.4dip" -->
	    <Button
	        android:id="@+id/btn_tvplayer"
	        android:background="@drawable/up_back"
	        android:textSize="18sp"
	        android:layout_width="100dip"
	        android:layout_height="100dip"
	        android:layout_centerInParent="true"
	        />
	    <Button
	        android:id="@+id/btn_controller"
	        android:background="@drawable/up_back"
	        android:textSize="18sp"
	        android:layout_width="100dip"
	        android:layout_height="100dip"
	        android:layout_above="@id/btn_tvplayer"
	        android:layout_centerHorizontal="true"
	        />
	    
	    <Button
	        android:id="@+id/btn_shoucang"
	        android:background="@drawable/up_back"
	        android:textSize="18sp"
	        android:layout_width="100dip"
	        android:layout_height="100dip"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@id/btn_tvplayer"
	        />
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@id/btn_tvplayer"
	        android:layout_centerVertical="true"
	        android:orientation="vertical">
	    <Button
	        android:id="@+id/btn_shezhi"
	        android:background="@drawable/up_back"
	        android:textSize="18sp"
	        android:layout_width="100dip"
	        android:layout_height="100dip"
	        android:layout_weight="1"
	        />
	    <Button
	        android:id="@+id/btn_fankui"
	        android:background="@drawable/up_back"
	        android:textSize="18sp"
	        android:layout_width="100dip"
	        android:layout_height="100dip"
	        android:layout_weight="1"
	        />
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/btn_tvplayer"
	        android:layout_centerVertical="true"
	        android:orientation="vertical">
		    <Button
		        android:id="@+id/btn_touying"
		        android:background="@drawable/up_back"
		        android:textSize="18sp"
		        android:layout_width="100dip"
		        android:layout_height="100dip"
		        android:layout_weight="1"
		        />
		    <Button
		        android:id="@+id/btn_sousuo"
		        android:background="@drawable/up_back"
		        android:textSize="18sp"
		        android:layout_width="100dip"
		        android:layout_height="100dip"
		        android:layout_weight="1"
		        />
	    </LinearLayout>
	</RelativeLayout>

    <!--IP选择-->
    <ListView
        android:id="@+id/clients"
        android:background="@drawable/title_ip_list_bg"
        android:layout_marginTop="67.6dip"
        android:layout_width="match_parent"
        android:layout_height="558dip"
        android:listSelector="@drawable/title_ip_list"
        android:visibility="gone"
        />

        <Button
            android:id="@+id/btn_list"
            android:background="@drawable/title_btn_list_selector"
            android:layout_width="204dip"
            android:layout_height="49.8dip"
            android:layout_marginLeft="70dip"
            android:layout_marginTop="10dip"
            />
</RelativeLayout>
