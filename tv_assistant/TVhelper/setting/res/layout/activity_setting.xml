<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TVRemoteControlActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="67.6dip"
        android:background="@drawable/title_banner"
        android:focusable="false"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title"
            android:layout_width="80dip"
            android:layout_height="64.3dip"
            android:layout_marginLeft="55dip"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="设置"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="70.5dip"
        android:layout_height="67.6dip"
        android:layout_marginLeft="0dip"
        android:background="@drawable/title_btn_back_selector" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="67.6dip"
        android:background="#F0F3F6"
        android:orientation="vertical" >

        <TextView
            style="@style/titletext"
            android:text="高级设置" />

        <LinearLayout style="@style/wrap_layout" >

            <!-- 上圆角 -->

            <LinearLayout
                android:id="@+id/btn_sys_score"
                style="@style/top_layout" >

                <TextView
                    style="@style/usertext"
                    android:text="系统评分" />

                <ImageView style="@style/img_arrow" />
            </LinearLayout>

            <!-- 分割线 -->

            <View style="@style/bg_line" />

            <!-- 下圆角 -->

            <LinearLayout
                android:id="@+id/btn_sys_helop"
                style="@style/bottom_layout" >

                <TextView
                    style="@style/usertext"
                    android:text="帮助" />

                <ImageView style="@style/img_arrow" />
            </LinearLayout>
        </LinearLayout>
        <!-- 全圆角 -->

        <TextView
            style="@style/titletext"
            android:text="关于" />

        <LinearLayout style="@style/wrap_layout" >

            <!-- 上圆角 -->

            <LinearLayout style="@style/top_layout" >

                <TextView
                    style="@style/usertext"
                    android:text="版本" />

                <TextView
                    android:id="@+id/update_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.0" />
            </LinearLayout>
            <!-- 分割线 -->

            <View style="@style/bg_line" />
            <!-- 下圆角 -->

            <LinearLayout
                android:id="@+id/update_info_btn"
                style="@style/bottom_layout" >

                <TextView
                    style="@style/usertext"
                    android:text="检查更新" />

                <ImageView style="@style/img_arrow" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>