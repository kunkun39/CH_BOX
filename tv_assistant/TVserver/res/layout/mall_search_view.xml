<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:background="@drawable/mall_search_pop_bg"
    android:gravity="center"
    android:paddingTop="20dp"
    android:orientation="vertical" >

    <LinearLayout 
        android:layout_width="250dp"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">            
		<TextView android:id="@+id/person"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:text="演员名:"
		    android:gravity="right"
		    android:textColor="#FF000000"
		    android:layout_weight="1"
		    android:layout_marginRight="20dp"		    
		    />
		<EditText android:id="@+id/persion_content"
		    android:layout_width="100dp"
		    android:layout_height="wrap_content"
		    android:textColor="#FF000000"
		    android:background="@null"
		    android:layout_weight="1"
		    android:singleLine="true"
		    />		
	</LinearLayout>
	<View 
		    android:layout_width="250dp"
	    	android:layout_height="1dp"
	    	android:background="#80FF0000"
		    />
	<LinearLayout 
        android:layout_width="250dp"
	    android:layout_height="wrap_content"
	    android:paddingTop="10dp"
	    android:orientation="horizontal">     
	<TextView android:id="@+id/name"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:textColor="#FF000000"
	    android:text="影片名:"
	    android:gravity="right"
	    android:layout_marginRight="20dp"/>
	
	<EditText android:id="@+id/name_content"
	    android:layout_width="100dp"
	    android:layout_height="wrap_content"
	    android:textColor="#FF000000"
	    android:background="@null"
	    android:layout_weight="1"
	    android:singleLine="true"/>
	
	</LinearLayout>
	<View 
		    android:layout_width="250dp"
	    	android:layout_height="1dp"
	    	android:background="#80FF0000"
		    />
	<LinearLayout 
        android:layout_width="250dp"
	    android:layout_height="wrap_content"
	    android:paddingTop="10dp"
	    android:orientation="horizontal">     
	<TextView android:id="@+id/area"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:textColor="#FF000000"
	    android:layout_weight="1"
	    android:text="地  区:"
	    android:gravity="right"
	    android:layout_marginRight="20dp"
	    android:layout_below="@id/name"/>
	
	<Spinner android:id="@+id/area_content"
	    android:layout_width="100dp"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:textColor="#FF000000"
	    android:background="@drawable/gridview_mall_spiner_selector"
	    android:layout_below="@id/name"
	    android:layout_toRightOf="@id/area"/>
	
	</LinearLayout>
	<View 
		    android:layout_width="250dp"
	    	android:layout_height="1dp"
	    	android:background="#80FF0000"
		    />
	<LinearLayout 
        android:layout_width="250dp"
	    android:layout_height="wrap_content"
	    android:paddingTop="10dp"
	    android:orientation="horizontal">     
	<TextView android:id="@+id/kind"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:textColor="#FF000000"
	    android:layout_weight="1"
	    android:text="主分类:"
	    android:gravity="right"
	    android:layout_marginRight="20dp"/>
	
	<Spinner android:id="@+id/kind_content"
	    android:layout_width="100dp"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:textColor="#FF000000"
	    android:background="@drawable/gridview_mall_spiner_selector"/>
	
	</LinearLayout>
	<View 
		    android:layout_width="250dp"
	    	android:layout_height="1dp"
	    	android:background="#80FF0000"
		    />
		<LinearLayout 
        android:layout_width="250dp"
	    android:layout_height="wrap_content"
	    android:paddingTop="10dp"
	    android:orientation="horizontal">     
	<TextView android:id="@+id/category"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:text="分  类:"
	    android:textColor="#FF000000"
	    android:gravity="right"
	    android:layout_marginRight="20dp"
	    android:layout_below="@id/area"/>
	
	<Spinner android:id="@+id/category_content"
	    android:layout_width="100dp"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:background="@drawable/gridview_mall_spiner_selector"
	    android:textColor="#FF000000"	    
	    android:layout_below="@id/area"	    
	    android:layout_toRightOf="@id/category"/>
	
	</LinearLayout>
	<View 
		    android:layout_width="250dp"
	    	android:layout_height="1dp"
	    	android:background="#80FF0000"
		    />
	<LinearLayout 
        android:layout_width="250dp"
	    android:layout_height="wrap_content"
	    android:paddingTop="10dp"
	    android:orientation="horizontal">     
	<TextView android:id="@+id/year"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:text="年  代:"
	    android:textColor="#FF000000"
	    android:gravity="right"
	    android:layout_marginRight="20dp"
	    android:layout_below="@id/category"/>
	
	<EditText android:id="@+id/year_content"
	    android:layout_width="100dp"                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:layout_below="@id/category"
	    android:background="@null"
	    android:textColor="#FF000000"
	    android:singleLine="true"
	    android:layout_toRightOf="@id/year"/>	
	</LinearLayout>
	<View 
		    android:layout_width="250dp"
	    	android:layout_height="1dp"
	    	android:background="#80FF0000"
		    />
	<LinearLayout 
        android:layout_width="250dp"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:paddingTop="10dp"
	    android:orientation="horizontal">
	<Button 
	    android:id="@+id/mall_search_comfirm"
	    android:layout_width="100dp"
	    android:layout_height="40dp"  
	    android:background="@drawable/mall_comfirm_btn_selector"
	    android:scaleType="fitXY"
	    />  
	    </LinearLayout>
	
</LinearLayout>
