<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bk_das">
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>
    <TextView
        android:id="@+id/discription_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:singleLine="true"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/discription_content"
        android:layout_width="match_parent"
        android:lines="2"
        android:layout_height="0dp"
        android:textColor="@color/Grey_500"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:layout_weight="1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn_next"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/nnext"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/guide_item_bg"/>
        <Button
            android:id="@+id/btn_skip"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:text="@string/skip"
            android:layout_alignParentLeft="true"
            android:background="@color/transparent"
            />
        <Button
            android:id="@+id/btn_start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/guide_btn_bg"
            android:text="@string/getstarted"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:visibility="gone"
            />
    </RelativeLayout>



</LinearLayout>