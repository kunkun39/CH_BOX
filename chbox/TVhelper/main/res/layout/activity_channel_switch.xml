<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    style="@style/Base.V21.Theme.AppCompat.Dialog"
    android:background="@color/LightBlue_500">

    <!--上面取消按钮-->
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:orientation="horizontal"
            android:background="@color/LightBlue_800"
            android:gravity="right|center_vertical">
        <Button
                android:id="@+id/dialogcancle"
                android:background="@drawable/h_btn_cancle_selector"
                android:layout_width="64.2dip"
                android:layout_height="50dip"
                />
    </LinearLayout>

    <!--中间频道选择部分-->
    <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/channel_switch_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/LightBlue_50"
            app:tabTextColor="@color/LightBlue_50"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/channel_switch_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</LinearLayout>
