<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ActivityDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
 <!-- 设置背景变暗 true变暗false不变 -->
    </style>

    <style name="Theme.Activity_Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
 <!-- 设置背景变暗 true变暗false不变 -->
    </style>

    <style name="Theme.Activity_Dialog1" parent="android:style/Theme.Dialog">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">false</item>
 <!-- 设置背景变暗 true变暗false不变 -->
    </style>

    <style name="Translucent_NoTitle" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- item name="android:windowBackground">@drawable/tv_background</item> -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="InputTheme" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:background">@color/LightBlue_500</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/LightBlue_500</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Theme" parent="android:Theme"></style>

    <style name="Theme.ActivityTransparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.spinner" parent="android:Theme.Light">
        <item name="android:dropDownWidth">20dp</item>
    </style>

    <style name="grid_line">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="grid_item">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="dialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/num_dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/num_dialog_exit_anim</item>
    </style>

</resources>