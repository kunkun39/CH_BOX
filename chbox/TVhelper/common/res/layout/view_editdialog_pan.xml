<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/view_editdialog_bg" >
    
    <!-- 标题 -->
    <TextView android:id="@+id/edit_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="14dp"
        android:textColor="@android:color/white"
        android:background="#43afcb" />
    
    <ImageView android:id="@+id/edit_dialog_title_deliver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_dialog_title"
        android:src="@drawable/view_editdialog_title_dilver"/>
    
    <!-- 内容 -->  

       <EditText
           android:id="@+id/edt_editdia_content"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="8dp"
           android:layout_marginRight="8dp"
           android:layout_below="@id/edit_dialog_title_deliver"
           android:layout_marginTop="20dp"
           android:gravity="center"
           android:background="@android:color/white"
           android:typeface="serif"
           android:singleLine="true"
           android:hint="@string/music_add_playlist_alert"
           android:textColorHint="#40777472"/>
       
       <ImageView
        android:id="@+id/iv_editdia_dilver"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/edt_editdia_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/view_editdialog_content_dilver" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_editdia_cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"  
            android:layout_marginTop="55dp"        
            android:gravity="center"
            android:typeface="serif"
            android:textColor="#494748"
            android:text="@string/cancel"
            android:background="@drawable/music_dialog_btn_selector"         
            android:textSize="@dimen/dialog_btn_textsize" />
        <View
              android:layout_width="1px"
              android:layout_height="40dp"
              android:background="#f0000000"
              android:layout_marginTop="55dp" />

        <Button
            android:id="@+id/bt_editdia_submit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1" 
            android:layout_marginTop="55dp"
            android:typeface="serif"
            android:gravity="center"
            android:textColor="#494748"
            android:text="@string/confrim" 
            android:background="@drawable/music_dialog_btn_selector"       
            android:textSize="@dimen/dialog_btn_textsize" />
    </LinearLayout>
    <TextView
        android:id="@+id/bt_editdia_hide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#494748"
        android:typeface="serif"
        android:text="@string/hide"
        android:textSize="@dimen/dialog_btn_textsize"
        android:layout_marginBottom="4dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>

</RelativeLayout>