<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bk_das"
    android:orientation="vertical">

    <!-- 标题栏 -->
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="67.6dip"
        android:background="@drawable/video_title_background"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/d_btn_return"
            android:layout_width="40dip"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:background="@drawable/das_title_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/videos"
            android:layout_toRightOf="@id/d_btn_return"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </RelativeLayout>

    <!-- 内容 -->
    
    <RelativeLayout
                android:id="@+id/music_volue_info"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:clipChildren="false"
                >

            <ImageView
                    android:id="@+id/control_volume_small"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="4dp"
                    android:paddingTop="17dp"
                    android:paddingBottom="17dp"
                    android:paddingLeft="40dp"

                    android:layout_centerVertical="true"
                    android:src="@drawable/control_volume_small1"/>

            <ImageView
                    android:id="@+id/control_volume_bigger"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="4dp"
                    android:layout_centerVertical="true"
                    android:paddingTop="17dp"
                    android:paddingBottom="17dp"
                    android:paddingRight="40dp"
                    android:src="@drawable/control_volume_bigger1"/>
            
            <com.changhong.touying.vedio.VolumeSeekBar
                    android:id="@+id/vedio_seek_volue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:focusable="false"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:maxHeight="4dp"
                    android:minHeight="4dp"
                    android:focusableInTouchMode="false"
                    android:progressDrawable="@drawable/volue_progress_holo_light"
                    android:thumb="@drawable/detail_icon_schedule_ball3"
                    android:thumbOffset="0dip" 
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/control_volume_small"
                    android:layout_toLeftOf="@id/control_volume_bigger"
                    />            
     </RelativeLayout>
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/music_volue_info"
        android:orientation="vertical" 
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_weight="4"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"

            android:layout_weight="12">
            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_gravity="center"
                android:background="@drawable/boder_black">
                <ImageView
                    android:id="@+id/details_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_album"
                    />
            </LinearLayout>


        </FrameLayout>
        
        <TextView
	        android:id="@+id/vedio_name"
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
            android:layout_weight="1"
	        android:layout_marginTop="20dp"
            android:singleLine="true"
            android:ellipsize="end"
	        android:gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
	        android:textSize="18sp" />

	    <TextView
	        android:id="@+id/vedio_author"
	        android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
	        android:layout_marginTop="10dp"
	        android:gravity="center"
            android:singleLine="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:ellipsize="end"
	        android:textSize="14sp"
	        android:textColor="@color/black" />
    
    </LinearLayout>
    <!-- 歌曲播放控制部分 -->

<LinearLayout 
            android:layout_height="100dp"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@drawable/music_play"
            android:orientation="vertical">      
             
      <SeekBar
             android:id="@+id/play_seekbar"
             android:layout_width="fill_parent"
             android:layout_height="30dp"
             android:paddingLeft="20dp"
             android:paddingTop="18dp"
             android:paddingRight="20dp"
             android:progressDrawable="@drawable/time_progress_holo_light"
             android:thumb="@drawable/detail_icon_schedule_ball2"
             android:thumbOffset="0dp"/> 
                    
      <RelativeLayout 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingLeft="20dp"
          android:paddingRight="20dp"
          android:paddingTop="5dp">
          
           <TextView
              android:id="@+id/vedio_showtime_going"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" 
              android:layout_alignParentLeft="true"           
              
              />

	       <TextView
	               android:id="@+id/vedio_showtime_total"
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:layout_alignParentRight="true"               
	               
	               />
      </RelativeLayout>

           
            
      <LinearLayout
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >
	        <RelativeLayout
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:gravity="center_vertical"
	                android:layout_marginBottom="10dp"
	                android:layout_weight="1"
	                >
	            <ImageButton
	                android:id="@+id/vedio_control_button"
	                android:layout_width="35dp"
	                android:layout_height="35dp"
	                android:background="@drawable/control_pause1"
	                android:layout_centerVertical="true"
	                android:layout_centerHorizontal="true"/>
	        </RelativeLayout>
            
        </LinearLayout>
    </LinearLayout>
</LinearLayout>