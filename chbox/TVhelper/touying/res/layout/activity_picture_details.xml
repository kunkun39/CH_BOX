<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/bk_das">
    <ViewFlipper
        android:id="@+id/image_flipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />
    <RelativeLayout
            android:id="@+id/top_linear"
            android:background="@drawable/das_music_header"
            android:layout_height="67.6dip"
            android:layout_width="fill_parent"
            android:focusable="false"
            android:orientation="horizontal">
        <Button
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/das_title_back"
            android:layout_marginLeft="16dp"
            />
        <TextView
                android:id="@+id/pic_continue_show"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textSize="20sp"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/cancel"/>
        <!--Button
		    android:id="@+id/bt_sharepic"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true"
		    android:layout_marginRight="8dp"
		    android:background="@drawable/btn_shar_stroke"
		    android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"
		    android:text="@string/share"
	    /-->
    </RelativeLayout>




    <LinearLayout
            android:id="@+id/bottom_linear"
            android:layout_height="60dip"
            android:layout_width="fill_parent"
            android:layout_alignParentBottom="true"
            android:focusable="false"
            android:orientation="horizontal">
        <ImageView
                android:id="@+id/rotation_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/das_music_rotate_left"
                />
        <ImageView
                android:id="@+id/rotation_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/das_music_rotate_right"
                />
    </LinearLayout>


    <RelativeLayout
            android:id="@+id/gesture_layout"
            android:layout_below="@id/top_linear"
            android:layout_above="@id/bottom_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/das_music_guide_bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/gesture_up"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/gesture_up"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+id/text_up"
                    />
                <TextView
                    android:id="@id/text_up"
                    android:text="@string/upslide_began_to_projection"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentBottom="true"
                    style="@style/picture_details_text" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/gesture_left"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="80dp"
                        android:layout_marginLeft="40dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/gesture_right"/>
                    <TextView
                        android:id="@+id/text_left"
                        android:layout_below="@id/gesture_left"
                        android:layout_alignLeft="@id/gesture_left"
                        android:text="@string/previous"
                        android:gravity="center"
                        style="@style/picture_details_text"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/gesture_right"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/gesture_left"
                        android:layout_marginLeft="80dp"
                        android:layout_alignParentLeft="true"
                        />
                    <TextView
                        android:id="@+id/text_right"
                        android:layout_below="@id/gesture_right"
                        android:layout_alignLeft="@id/gesture_right"
                        android:layout_alignRight="@id/gesture_right"
                        android:text="@string/next"
                        android:gravity="center"
                        style="@style/picture_details_text" />
                </RelativeLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/gesture_scale"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/gesture_room"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:id="@+id/text_scale"
                    android:text="@string/scaling_pictures"
                    android:layout_below="@id/gesture_scale"
                    android:layout_centerHorizontal="true"
                    style="@style/picture_details_text" />
                </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>