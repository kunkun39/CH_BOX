<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/music_play"
    android:orientation="vertical"
    android:visibility="invisible" >

    <SeekBar
        android:id="@+id/music_seek"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="18dp"
        android:progressDrawable="@drawable/time_progress_holo_light"
        android:thumb="@drawable/detail_icon_schedule_ball2"
        android:thumbOffset="0dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="3dp" >

        <TextView
            android:id="@+id/music_showtime_going"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" 
            android:textSize="12sp"
            android:textColor="#ff201f20"
            android:typeface="serif"/>

        <TextView
            android:id="@+id/music_showtime_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:textColor="#ff201f20"
            android:typeface="serif" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <ImageButton
                android:id="@+id/control_song_previous"
                android:layout_width="31dp"
                android:layout_height="19dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/control_song_previous" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <ImageButton
                android:id="@+id/music_control_button"
                android:layout_width="24dp"
                android:layout_height="32dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/control_pause1" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <ImageButton
                android:id="@+id/control_song_next"
                android:layout_width="31dp"
                android:layout_height="19dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/control_song_next" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>