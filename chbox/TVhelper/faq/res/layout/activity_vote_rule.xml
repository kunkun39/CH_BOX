<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/faq_bg" >

    <RelativeLayout
            android:layout_width="400dip"
            android:layout_height="400dip"
            android:layout_centerInParent="true"
            android:background="@drawable/bkg_m">
        <TextView
                android:id="@+id/examination_rule_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:lineSpacingExtra="8dip"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/FONT_SIZE_SMALL"/>
    </RelativeLayout>

    <Button
            android:id="@+id/examination_rule_button"
            android:layout_width="200dip"
            android:layout_height="100dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="380dip"
            android:background="@drawable/btn_rule_selector"
            android:visibility="gone"/>
</RelativeLayout>
