<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F3F6"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="67.6dip"
        android:background="@drawable/title_banner"
        android:focusable="false"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/cancel_help"
            android:layout_width="70.5dip"
            android:layout_height="67.6dip"
            android:layout_marginLeft="0dip"
            android:background="@drawable/title_btn_back_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_details"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        style="@style/titletext"
        android:text="常见问题" />

    <LinearLayout style="@style/wrap_layout" >

        <!-- 上圆角 -->

        <LinearLayout
            android:id="@+id/remote_control_help"
            style="@style/top_layout" >

            <TextView
                style="@style/usertext"
                android:text="@string/rch_name" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>

        <!-- 分割线 -->

        <View style="@style/bg_line" />

        <!-- 下圆角 -->

        <LinearLayout
            android:id="@+id/voice_control_help"
            style="@style/mid_layout" >

            <TextView
                style="@style/usertext"
                android:text="@string/vch_name" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>

        <View style="@style/bg_line" />

        <LinearLayout
            android:id="@+id/yuyue_control_help"
            style="@style/bottom_layout" >

            <TextView
                style="@style/usertext"
                android:text="@string/pch_name" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>
        <View style="@style/bg_line" />

        <LinearLayout
            android:id="@+id/file_control_help"
            style="@style/bottom_layout" >

            <TextView
                style="@style/usertext"
                android:text="@string/pdf_ppt_hologram" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>